algoritmo "Nome do Programa"

var
    emprestimo, parcelas, uniq: real
    qtd_parcelas: inteiro
inicio
    Escreva("Quanto o valor do emprestimo? ")
    leia(emprestimo)
    Escreva("Quantas parcelas? ")
    leia(parcelas)    
    uniq <- emprestimo * 20) / parcelas
    Escreva("Vou pagar ", parcelas, " de R$", uniq)
fimalgoritmo

